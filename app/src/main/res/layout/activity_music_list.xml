<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MusicListActivity">

    <ImageView
        android:id="@+id/imageBgView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/musicbg" />

    <TextView
        android:id="@+id/textListHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_list_header"
        android:padding="@dimen/spaceLarge"
        android:textColor="@color/colorWhite"
        android:background="@color/colorPrimary"
        android:textSize="@dimen/fontMedium"/>

    <ListView
        android:id="@+id/listview_songs"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>

</android.support.constraint.ConstraintLayout>