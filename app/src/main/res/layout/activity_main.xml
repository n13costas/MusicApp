<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageBgView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/musicbg" />

    <TextView
        android:id="@+id/textMusicAppView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="monospace"
        android:textAllCaps="true"
        android:text="@string/app_motto"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageBgView"
        app:layout_constraintEnd_toEndOf="@+id/imageBgView"
        app:layout_constraintStart_toStartOf="@+id/imageBgView"
        app:layout_constraintTop_toTopOf="@+id/imageBgView"
        android:padding="@dimen/spaceXLarge"/>

    <TextView
        android:id="@+id/textStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textMusicAppView"
        android:background="@color/colorPrimary"
        android:fontFamily="casual"
        android:padding="@dimen/spaceMedium"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"/>


</android.support.constraint.ConstraintLayout>